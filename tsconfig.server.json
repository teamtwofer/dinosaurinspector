{
  "compilerOptions": {
    "outDir": "serverBuild",
    "noImplicitAny": false,
    "target": "es6",
    "declaration": false,
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "pretty": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "module": "commonjs",
    "sourceMap": true,
    "lib": ["es2015", "es2016", "es2017", "dom"]
  },
  "exclude": ["./client/**/*.ts", "./client/**/*.tsx", "node_modules"],
  "filesGlob": ["./server/**/*.ts", "./types/**/*.ts", "./lang/**/*.ts"]
}
