{
    "compilerOptions": {
        "outDir": "serverBuild",
        "noImplicitAny": false,
        "target": "es5",
        "jsx": "react",
        "declaration": false,
        "moduleResolution": "node",
        "strict": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noLib": false,
        "pretty": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "preserveConstEnums": true,
        "baseUrl": ".",
        "module": "commonjs",
        "sourceMap": true,
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "dom"
        ]
    },
    "extends": "./tsconfig",
    "exclude": [
        "./client/**/*.ts",
        "./client/**/*.tsx",
        "node_modules"
    ],
    "filesGlob": [
        "./server/**/*.ts",
        "./types/**/*.ts",
        "./lang/**/*.ts"
    ]
}